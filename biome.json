{
  "$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
  "files": {
    "ignoreUnknown": true,
    "maxSize": 5242880,
    "includes": ["apps/**/*.{ts,tsx,js,jsx,json}"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
